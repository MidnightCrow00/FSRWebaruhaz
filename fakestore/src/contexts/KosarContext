import {createContext, useEffect, useState } from "react";
import { myAxios } from "./MyAxios";

export const KosarContext=createContext("")

const KosarProvider=({children})=>{
    const [kosarLista, setKosarLista] = useState([]);

    const vegpont = "https://fakestoreapi.com"
    const getAdat = async (vegpont)=>{
        try{
            const response = await myAxios.get(vegpont);
            console.log(response)
            setTermekLista(response.data)
        }catch(err){
            console.log("Hiba törttént az adatok lekérésekor.")
        }finally{

        }
    };
    useEffect(()=>{
        getAdat("/products")
    },[]);
    return(
        <KosarContext.Provider value={{kosarLista, setKosarLista}}>
            {children}
        </KosarContext.Provider>
    );
}
export default KosarProvider;
